<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kasir">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission-sdk-23 android:name="android.permission.INTERNET" />
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_WIFI_STATE" />

    <application
        android:name=".Kasir"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kasir.NoActionBar">
        <activity
            android:name=".ui.home.detail.DetailsSearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.detail.DetailsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.search.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.dashboard.transaction.TransactionPendingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.home.BottomNavigationActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false"
            android:rotationAnimation="seamless" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:rotationAnimation="seamless">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>